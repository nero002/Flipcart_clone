<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e6e6e6"
    tools:context=".Fragments.MyCart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:id="@+id/lineat2"
        android:background="@color/login_fb">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector__3_"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My cart"
            android:textSize="@dimen/dp_23"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_30"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lineat2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:layout_below="@id/lineat1">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardview1"
                android:layout_below="@id/lineat2"
                android:layout_height="@dimen/dp_75"
                tools:ignore="NotSibling">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deliver to"
                    android:textSize="@dimen/dp_18"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deeraj Gupta, 411041"
                    android:textSize="@dimen/dp_18"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dp_90"
                    android:layout_marginTop="@dimen/dp_20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="flat No.502 B Wing Prayja Pearl, sinh..."
                    android:textSize="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_45"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textColor="@color/login_fb"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_12"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="85dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="order name"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rating"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.275"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_100"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 offer available"
                    android:textColor="@color/teal_200"
                    android:layout_marginTop="@dimen/dp_120"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginStart="@dimen/dp_15"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty: 1"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_100"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery in 2 days, Mon"
                    android:layout_marginTop="@dimen/dp_140"
                    android:layout_marginStart="@dimen/dp_15"/>
                <view
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="175dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_download"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save for later"
                    android:layout_marginTop="195dp"
                    android:layout_marginStart="80dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="250dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:layout_gravity="end"
                    android:layout_marginTop="195dp"
                    android:layout_marginEnd="70dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:id="@+id/cvprice"
                android:layout_marginTop="330dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRICE DETAILS"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="#c0c0c0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price (1 item)"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="@dimen/dp_15"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.550"
                    android:textSize="@dimen/dp_15"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dp_70"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-Rs.275"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="70dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Charges"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dp_95"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.40"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="95dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#e0e0e0"
                    android:layout_marginTop="@dimen/dp_120"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:layout_marginTop="125dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.315"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="125dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_150"
                    android:background="#c0c0c0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="you will save Rs.200 on this order"
                    android:layout_marginTop="160dp"
                    android:layout_marginStart="@dimen/dp_15"
                    android:textColor="#008000" />
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvprice"
                android:src="@drawable/ic_shield"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvprice"
                android:text="Safe and secure Payments. Easy returns. 100% Authentic products"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_120"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="650dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.315"
                    android:textSize="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_20"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Price Details"
                    android:textColor="@color/login_fb"
                    android:textSize="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_20"
                    android:textStyle="bold"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTINUE"
                    android:textColor="@color/white"
                    android:background="#FF6347"
                    android:layout_marginStart="210dp"
                    android:paddingStart="@dimen/dp_60"
                    android:paddingEnd="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_10"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>