<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context=".Fragments.Payment_Details"
    tools:ignore="NotSibling">

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/lineat1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/login_fb">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/ic_vector__3_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_18"
            android:text="Payments"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_23" />
    </LinearLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/lineat1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineat1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:layout_below="@id/lineat1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:layout_below="@id/lineat1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_45"
                    android:text="Address"
                    android:textSize="@dimen/dp_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_12"
                    android:src="@drawable/ic_check_mark" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_200"
                    android:layout_marginTop="@dimen/dp_12"
                    android:src="@drawable/ic_check_mark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_45"
                    android:text="Order Summary"
                    android:textSize="@dimen/dp_18" />

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginStart="115dp"
                    android:layout_marginTop="@dimen/dp_27"
                    android:background="@color/login_fb" />

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginStart="245dp"
                    android:layout_marginTop="@dimen/dp_27"
                    android:background="@color/login_fb" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="330dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/ic_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="310dp"
                    android:layout_marginTop="@dimen/dp_45"
                    android:text="Payment"
                    android:textSize="@dimen/dp_18" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="@dimen/sp_15"
                    android:text="5% Unlimited Cashback on Flipkart Axis Bank Credit Card               T&amp;C"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/ic_label" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Suggested for you"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_35"
                    android:text="State Bank of India Debit Card"
                    android:textStyle="bold" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_70"
                    android:layout_marginTop="55dp"
                    android:text="51** **** **** 4029"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tvcvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_75"
                    android:text="CVV"
                    android:textSize="@dimen/sp_20" />

                <View
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_60"
                    android:layout_marginTop="110dp"
                    android:background="#999999" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="@dimen/dp_80"
                    android:src="@drawable/ic_question__1_" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="350dp"
                    android:layout_marginTop="@dimen/dp_70"
                    android:src="@drawable/sbi" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_140" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_130"
                    android:text="HDFC Bank Debit Card"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_70"
                    android:layout_marginTop="150dp"
                    android:text="51** **** **** 4029"
                    android:textColor="#999999" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="350dp"
                    android:layout_marginTop="135dp"
                    android:src="@drawable/hdfc" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="200dp"
                    android:background="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="210dp"
                    android:text="Show 3 more"
                    android:textColor="@color/login_fb" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:src="@drawable/upidetails"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#fff7e6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="100% Safe and Secure Payments"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_20"
                android:text="Rs.315"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_40"
                android:text="View Price Details"
                android:textColor="@color/login_fb"
                android:textSize="@dimen/dp_15" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#FF6347"
                android:paddingStart="@dimen/dp_50"
                android:paddingEnd="@dimen/dp_50"
                android:text="CONTINUE"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>